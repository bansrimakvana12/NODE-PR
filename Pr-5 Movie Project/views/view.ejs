<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Page</title>
    <!-- Bootstrap CSS -->
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" 
        rel="stylesheet">
</head>
<body class="bg-light bg-dark">
    <div class="container mt-5">
        <h2 class="text-center mb-4">View Movie</h2>
        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary">Add New Movie</a>
        </div>
        <div class="row mt-5 ">
            <% users.map((val, i) => { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow ">
                    <img src="<%= val.image %>" class="card-img-top img-fluid" alt="Movie Image">
                    <div class="card-body text-center">
                        <h5 class="card-title ">#<%= ++i %> - <%= val.moviename %></h5>
                        <p class="card-text">
                            <strong>Type:</strong> <%= val.movie %><br>
                            <strong>Intro:</strong> <%= val.movieintro %><br>
                            <strong>Price:</strong> $<%= val.movieprice %>
                        </p>
                        <div class="">
                            <a href="/editRecord?id=<%= val.id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/deleteRecord?id=<%= val.id %>" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
       
    </div>

    <!-- Bootstrap JS Bundle -->
    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js">
    </script>
</body>
</html>
